# BaseBytes Production Environment Configuration
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control

# ============================================
# SECURITY: REQUIRED FOR PRODUCTION
# ============================================

# API Authentication
MINI_API_KEY=                    # REQUIRED: Generate strong random key (min 32 chars)
                                 # Generate with: openssl rand -base64 32

# CORS Configuration
ALLOWED_ORIGINS=                 # REQUIRED: Comma-separated list of allowed origins
                                 # Example: https://app.basebytes.io,https://dashboard.basebytes.io

# Database Credentials
DB_USER=basebytes
DB_PASSWORD=                     # REQUIRED: Generate strong password (min 16 chars)
DB_NAME=basebytes
DATABASE_URL=                    # REQUIRED: Full connection string with SSL
                                 # Example: postgresql://user:pass@host:5432/db?sslmode=require

# Database TLS Certificate
DB_CA_CERT_PATH=                 # Path to CA certificate for DB TLS verification
                                 # Required if using self-signed certs

# Redis Credentials
REDIS_PASSWORD=                  # REQUIRED: Generate strong password (min 16 chars)

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# RPC Endpoints
BASE_SEPOLIA_RPC_URL=           # Base Sepolia RPC endpoint

# Contract Addresses
ROUTER_ADDRESS=0xF0a998d1cA93def52e2eA9929a20fEe8a644551c
USDC_ADDRESS=                    # USDC contract address
EAS_SCHEMA_UID=                  # EAS schema UID

# Private Keys (use secret manager in production)
ATTESTER_PRIVATE_KEY=            # EAS attestation key
PAYOUT_SIGNER_PK=                # USDC payout key

# ============================================
# APPLICATION CONFIGURATION
# ============================================

NODE_ENV=production
PORT=3000
MINI_PORT=8787
ANCHOR_TIME_UTC=10:00
PLATFORM_ADDRESS=
PAYOUTS_MODE=live
POLICY=standard
